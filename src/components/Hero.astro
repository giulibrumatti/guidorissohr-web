---
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import MailIcon from "@/components/icons/Mail.astro"
import SocialPill from "@/components/SocialPill.astro"
import { basics } from "datos.json";
const { name, avatar, image, urlInstagram, urlLinkedin, email } = basics
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-32 w-32 aspect-square object-cover border-4 border-red-400"
      src={avatar}
      alt={name}
    />
    <a
      href={urlLinkedin}
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight sm:text-5xl text-white"
  >
    Hola, soy Guido
  </h1>
  <p
    class="mt-6 text-xl [&>strong]:text-red-300 [&>strong]:font-semibold text-gray-300"
  >
    HR Tech | HR Generalist | People Analytics | Using technology and data to make HR better
    
  </p>
  <p class="mt-6 text-xl [&>strong]:text-red-300 [&>strong]:font-semibold text-gray-300">
    Nombrado <strong><em class="italic">TOP HR INFLUENCER 2023</em></strong> en Argentina por <strong>Go integro</strong>.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href={email}>
      <MailIcon class="size-4" />
      Cont√°ctame
    </SocialPill>
    <SocialPill href={urlLinkedin}>
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
  </nav>
</div>
